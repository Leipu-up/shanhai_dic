/* pages/home/home.wxss */
.home-page {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding-bottom: 40rpx;
  }
  
  /* 搜索框样式 */
  .search-container {
    padding: 30rpx 30rpx 20rpx;
    background: linear-gradient(135deg, #2c3e50 0%, #4a6491 100%);
  }
  
  .search-bar {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 50rpx;
    padding: 24rpx 30rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  }
  
  .search-icon {
    margin-right: 20rpx;
    font-size: 36rpx;
    color: #999;
  }
  
  .search-text {
    color: #999;
    font-size: 30rpx;
    flex: 1;
  }
  
  /* 轮播图样式 */
  .banner-swiper {
    height: 350rpx;
    margin: 0 30rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    position: relative;
  }
  
  .banner-icon {
    font-size: 120rpx;
    margin-bottom: 20rpx;
  }
  
  .banner-title {
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
    padding: 0 30rpx;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  }
  
  /* 分类区域 */
  .category-section {
    background-color: white;
    margin: 30rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .section-more {
    font-size: 28rpx;
    color: #666;
  }
  
  .category-scroll {
    white-space: nowrap;
    width: 100%;
  }
  
  .category-item {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    margin-right: 40rpx;
    width: 120rpx;
  }
  
  .category-icon {
    font-size: 80rpx;
    width: 120rpx;
    height: 120rpx;
    background-color: #f8f9fa;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
  }
  
  .category-name {
    font-size: 28rpx;
    color: #333;
    text-align: center;
  }
  
  /* 每日推荐 */
  .daily-section {
    background-color: white;
    margin: 30rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .daily-card {
    display: flex;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16rpx;
    overflow: hidden;
    color: white;
    min-height: 250rpx;
  }
  
  .daily-content {
    flex: 1;
    padding: 40rpx 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .daily-tag {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    align-self: flex-start;
    margin-bottom: 20rpx;
  }
  
  .daily-title {
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    line-height: 1.3;
  }
  
  .daily-desc {
    font-size: 28rpx;
    opacity: 0.9;
    margin-bottom: 20rpx;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
  
  .daily-footer {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    opacity: 0.8;
  }
  
  .daily-image {
    width: 280rpx;
    height: 250rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .daily-story-icon {
    font-size: 120rpx;
  }
  
  /* 专题区域 */
  .topic-section {
    background-color: white;
    margin: 30rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .topic-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30rpx;
  }
  
  .topic-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .topic-icon-box {
    width: 120rpx;
    height: 120rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
  }
  
  .topic-icon {
    font-size: 60rpx;
  }
  
  .topic-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
    text-align: center;
  }
  
  .topic-count {
    font-size: 26rpx;
    color: #666;
  }
  
  /* 历史记录区域 */
  .history-section {
    background-color: white;
    margin: 30rpx;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  }
  
  .history-scroll {
    white-space: nowrap;
    width: 100%;
  }
  
  .history-item {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    margin-right: 30rpx;
    width: 160rpx;
  }
  
  .history-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 16rpx;
    margin-bottom: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .history-icon {
    font-size: 80rpx;
  }
  
  .history-name {
    font-size: 28rpx;
    color: #333;
    text-align: center;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }