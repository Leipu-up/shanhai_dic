/* pages/detail/detail.wxss */
.detail-page {
    min-height: 100vh;
    background-color: #f5f5f5;
  }
  
  .detail-header {
    background-color: #2c3e50;
    color: white;
    padding: 60rpx 40rpx;
    border-radius: 0 0 40rpx 40rpx;
  }
  
  .detail-title {
    font-size: 48rpx;
    font-weight: bold;
    display: block;
    margin-bottom: 20rpx;
  }
  
  .detail-subtitle {
    font-size: 32rpx;
    opacity: 0.9;
  }
  
  .detail-content {
    padding: 40rpx;
  }
  
  .content-section {
    background-color: white;
    border-radius: 16rpx;
    padding: 40rpx;
    margin-bottom: 40rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .info-item {
    display: flex;
  }
  
  .info-label {
    font-weight: bold;
    color: #666;
    font-size: 30rpx;
    width: 120rpx;
  }
  
  .info-value {
    flex: 1;
    font-size: 30rpx;
    color: #333;
  }
  
  .description {
    line-height: 1.8;
  }
  
  .original {
    font-size: 30rpx;
    color: #8b4513;
    margin-bottom: 30rpx;
    display: block;
    font-style: italic;
  }
  
  .translation {
    font-size: 30rpx;
    color: #333;
    display: block;
  }
  
  .related-items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .related-item {
    background-color: #f8f9fa;
    border-radius: 12rpx;
    padding: 30rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .related-icon {
    font-size: 60rpx;
    margin-bottom: 10rpx;
  }
  
  .related-name {
    font-size: 28rpx;
    color: #333;
  }
  
  .user-actions {
    display: flex;
    justify-content: space-around;
  }
  
  .action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: none;
    border: none;
    padding: 20rpx;
  }
  
  .action-btn::after {
    border: none;
  }
  
  .action-icon {
    font-size: 60rpx;
    margin-bottom: 10rpx;
  }
  
  .action-btn text {
    font-size: 28rpx;
    color: #666;
  }
  
  .action-btn.active text {
    color: #3cc51f;
  }