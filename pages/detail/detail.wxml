<!-- pages/detail/detail.wxml -->
<view class="detail-page">
  <view class="detail-header">
    <text class="detail-title">{{title || '神话详情'}}</text>
    <text class="detail-subtitle">{{subtitle || '古代神话传说'}}</text>
  </view>

  <view class="detail-content">
    <view class="content-section">
      <view class="section-title">基本信息</view>
      <view class="info-grid">
        <view class="info-item">
          <text class="info-label">类型：</text>
          <text class="info-value">{{type || '神话人物'}}</text>
        </view>
        <view class="info-item">
          <text class="info-label">出处：</text>
          <text class="info-value">{{source || '《山海经》'}}</text>
        </view>
        <view class="info-item">
          <text class="info-label">时期：</text>
          <text class="info-value">{{period || '上古时期'}}</text>
        </view>
      </view>
    </view>

    <view class="content-section">
      <view class="section-title">详细描述</view>
      <view class="description">
        <text class="original">原文：天地玄黄，宇宙洪荒。日月盈昃，辰宿列张...</text>
        <text class="translation">译文：天是青黑色的，地是黄色的，宇宙形成于混沌蒙昧的状态中...</text>
      </view>
    </view>

    <view class="content-section">
      <view class="section-title">关联内容</view>
      <view class="related-items">
        <view class="related-item" wx:for="{{related}}" wx:key="id" bindtap="onRelatedTap" data-id="{{item.id}}">
          <text class="related-icon">{{item.icon}}</text>
          <text class="related-name">{{item.name}}</text>
        </view>
      </view>
    </view>

    <view class="content-section">
      <view class="section-title">用户互动</view>
      <view class="user-actions">
        <button class="action-btn {{collected ? 'active' : ''}}" bindtap="onCollect">
          <text class="action-icon">{{collected ? '★' : '☆'}}</text>
          <text>收藏</text>
        </button>
        <button class="action-btn" bindtap="onShare">
          <text class="action-icon">📤</text>
          <text>分享</text>
        </button>
        <button class="action-btn" bindtap="onNote">
          <text class="action-icon">📝</text>
          <text>笔记</text>
        </button>
      </view>
    </view>
  </view>
</view>