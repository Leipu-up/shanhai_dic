/* pages/story/story.wxss */
.story-page {
    min-height: 100vh;
    background-color: #f5f5f5;
  }
  
  .stories-list {
    background-color: white;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 30rpx;
  }
  
  .story-item {
    display: flex;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .story-item:last-child {
    border-bottom: none;
  }
  
  .story-cover {
    font-size: 80rpx;
    width: 120rpx;
    height: 120rpx;
    background-color: #f0f7ff;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 30rpx;
  }
  
  .story-info {
    flex: 1;
  }
  
  .story-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .story-desc {
    font-size: 30rpx;
    color: #666;
    display: block;
    margin-bottom: 20rpx;
    line-height: 1.4;
  }
  
  .story-meta {
    display: flex;
  }
  
  .meta-item {
    font-size: 26rpx;
    color: #999;
    margin-right: 40rpx;
  }
  
  .timeline-section {
    background-color: white;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 40rpx;
  }
  
  .timeline {
    position: relative;
    padding-left: 40rpx;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 20rpx;
    top: 0;
    bottom: 0;
    width: 4rpx;
    background-color: #e0e0e0;
  }
  
  .timeline-item {
    position: relative;
    margin-bottom: 40rpx;
  }
  
  .timeline-dot {
    position: absolute;
    left: -30rpx;
    top: 10rpx;
    width: 20rpx;
    height: 20rpx;
    background-color: #3cc51f;
    border-radius: 50%;
    border: 4rpx solid white;
    box-shadow: 0 0 0 4rpx #3cc51f;
  }
  
  .timeline-content {
    padding: 20rpx;
    background-color: #f8f9fa;
    border-radius: 12rpx;
  }
  
  .timeline-time {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .timeline-event {
    font-size: 30rpx;
    color: #666;
    display: block;
  }