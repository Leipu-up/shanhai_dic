.modal-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
}

.modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.modal-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: white;
    border-radius: 40rpx 40rpx 0 0;
    max-height: 85%;
    /* 最大高度为屏幕的85% */
    display: flex;
    flex-direction: column;
    animation: slideUp 0.3s ease;
}

@keyframes slideUp {
    from {
        transform: translateY(100%);
    }

    to {
        transform: translateY(0);
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 30rpx 20rpx;
    border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
}

.close-btn {
    font-size: 50rpx;
    color: #999;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-body {
    flex: 1;
    padding: 20rpx 30rpx;
    /* 自动计算高度 */
    min-height: 400rpx;
}

.form-section {
    margin-bottom: 40rpx;
    width: 100%;
}

.section-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 30rpx;
    padding-left: 20rpx;
    position: relative;
}

.section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10rpx;
    width: 6rpx;
    height: 30rpx;
    background: #FF69B4;
    border-radius: 3rpx;
}

.form-item {
    margin-bottom: 30rpx;
}

.form-label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 15rpx;
}

.form-label.required::after {
    content: '*';
    color: #FF4444;
    margin-left: 5rpx;
}

.form-input {
    background: #F8F8F8;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    border: 1rpx solid #E0E0E0;
}

.form-input:focus {
    border-color: #FF69B4;
}

.picker-input {
    background: #F8F8F8;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    border: 1rpx solid #E0E0E0;
    display: flex;
    align-items: center;
}

.picker-text {
    flex: 1;
}

.picker-text.placeholder {
    color: #999;
}

.help-text {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
    display: block;
}

.form-textarea {
    background: #F8F8F8;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    border: 1rpx solid #E0E0E0;
    height: 200rpx;
    width: 100%;
    box-sizing: border-box;
    min-height: 200rpx; /* 确保足够的高度 */
}

.textarea-counter {
    text-align: right;
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}

.modal-footer {
    display: flex;
    padding: 30rpx;
    border-top: 1rpx solid #F0F0F0;
    gap: 20rpx;
}

.btn-cancel {
    flex: 1;
    background: #F5F5F5 !important;
    color: #666 !important;
    border-radius: 50rpx !important;
    font-size: 32rpx !important;
    height: 80rpx !important;
    border: none !important;
}

.btn-confirm {
    flex: 1;
    background: linear-gradient(135deg, #FF69B4, #FF1493) !important;
    color: white !important;
    border-radius: 50rpx !important;
    font-size: 32rpx !important;
    height: 80rpx !important;
    border: none !important;
}

.btn-confirm[disabled] {
    opacity: 0.5 !important;
}

/* 客户搜索相关样式 */
.customer-search-box {
    position: relative;
    margin-bottom: 20rpx;
}

.search-input-container {
    display: flex;
    align-items: center;
    background: #F5F5F5;
    border-radius: 50rpx;
    padding: 0 25rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
}

.search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    height: 100%;
    padding-right: 20rpx;
}

.search-icon {
    font-size: 32rpx;
    color: #999;
    flex-shrink: 0;
    padding: 0 10rpx;
}

.search-clear {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    background: #E0E0E0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #999;
    margin-left: 10rpx;
}

/* 搜索结果列表 */
.search-results {
    position: absolute;
    top: 90rpx;
    left: 0;
    right: 0;
    background: white;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
    z-index: 1000;
    max-height: 350rpx;
    overflow-y: auto;
    border: 1rpx solid #e0e0e0;
}

.result-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 30rpx;
    border-bottom: 1rpx solid #f5f5f5;
    transition: background-color 0.2s;
}

.result-item:last-child {
    border-bottom: none;
}

.result-item:active {
    background-color: #f8f8f8;
}

.customer-info {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.customer-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 5rpx;
    font-weight: 500;
}

.customer-phone {
    font-size: 24rpx;
    color: #666;
}

.select-hint {
    font-size: 24rpx;
    color: #4a90e2;
    background: #e6f7ff;
    padding: 6rpx 15rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
}

/* 无结果提示 */
.no-results {
    text-align: center;
    padding: 30rpx 20rpx;
    background: #fafafa;
    border-radius: 12rpx;
    margin-top: 10rpx;
    border: 1rpx solid #e8e8e8;
}

.no-results-text {
    font-size: 26rpx;
    color: #999;
}

/* 已选择的客户信息 */
.selected-customer {
    background: #f8f8f8;
    border-radius: 12rpx;
    padding: 25rpx;
    margin-top: 20rpx;
    border: 1rpx solid #e8e8e8;
}

.selected-customer-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.selected-customer-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.selected-customer-info:first-child {
    margin-right: 20rpx;
}

.info-label {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 5rpx;
}

.info-value {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    word-break: break-all;
}

.btn-change-customer {
    background: #f0f0f0 !important;
    color: #666 !important;
    border: 1rpx solid #ddd !important;
    border-radius: 30rpx !important;
    padding: 12rpx 30rpx !important;
    font-size: 26rpx !important;
    width: auto !important;
    display: inline-block !important;
    height: auto !important;
    line-height: 1.2 !important;
}

.btn-change-customer:active {
    background: #e8e8e8 !important;
}