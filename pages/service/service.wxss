/* service.wxss */
.service-page {
    padding: 20rpx;
    min-height: 100vh;
    background-color: #f8f8f8;
  }
  
  /* 搜索和新增区域 - 始终显示版本 */
  .search-add-bar {
    display: flex;
    align-items: center;
    gap: 20rpx;
    margin-bottom: 30rpx;
    padding: 0 10rpx;
  }
  
  .search-box.always-show {
    flex: 1;
    position: relative;
    background: white;
    border-radius: 50rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  }
  
  .search-icon {
    font-size: 36rpx;
    margin-right: 20rpx;
    color: #999;
  }
  
  .search-input {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: #333;
    background: transparent;
  }
  
  /* 新增图标按钮 */
  .add-icon-btn {
    width: 80rpx;
    height: 80rpx;
    background: linear-gradient(135deg, #FF69B4, #FF1493);
    color: white;
    border-radius: 50%;
    font-size: 36rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.3);
    flex-shrink: 0;
  }
  
  .add-icon-btn:active {
    transform: scale(0.95);
    opacity: 0.9;
  }
  
  .icon {
    font-size: 44rpx;
  }
  
  /* 服务列表 */
  .service-list {
    margin-bottom: 40rpx;
  }
  
  .service-item {
    background: white;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  }
  
  .service-info {
    margin-bottom: 20rpx;
  }
  
  .service-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    display: block;
    margin-bottom: 15rpx;
    line-height: 1.4;
  }
  
  .service-details {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    align-items: center;
    margin-bottom: 15rpx;
  }
  
  .service-price {
    color: #FF69B4;
    font-size: 36rpx;
    font-weight: bold;
    min-width: 120rpx;
  }
  
  .service-duration,
  .service-category {
    font-size: 26rpx;
    color: #666;
    background: #f0f0f0;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
  }
  
  .service-description {
    font-size: 26rpx;
    color: #888;
    line-height: 1.5;
    display: block;
    margin-top: 10rpx;
  }
  
  .service-actions {
    display: flex;
    justify-content: flex-end;
    gap: 20rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #eee;
  }
  
  .action-btn {
    display: flex;
    align-items: center;
    gap: 8rpx;
    padding: 12rpx 24rpx;
    border-radius: 30rpx;
    font-size: 26rpx;
    min-width: 120rpx;
    justify-content: center;
  }
  
  .action-btn.edit {
    background: #FFE4F2;
    color: #FF69B4;
    border: 1rpx solid #FF69B4;
  }
  
  .action-btn.delete {
    background: #FFEEEE;
    color: #FF4444;
    border: 1rpx solid #FF4444;
  }
  
  .action-icon {
    font-size: 28rpx;
  }
  
  /* 空状态 */
  .empty-state {
    text-align: center;
    padding: 120rpx 0;
    background: white;
    border-radius: 16rpx;
    margin: 20rpx;
  }
  
  .empty-icon {
    font-size: 120rpx;
    display: block;
    margin-bottom: 30rpx;
    opacity: 0.5;
  }
  
  .empty-text {
    display: block;
    font-size: 32rpx;
    color: #999;
    margin-bottom: 10rpx;
  }
  
  .empty-tip {
    font-size: 26rpx;
    color: #ccc;
  }
  
  /* 加载更多 */
  .load-more,
  .no-more {
    text-align: center;
    padding: 40rpx 0;
    font-size: 28rpx;
    color: #999;
  }
  
  .load-more:active {
    opacity: 0.7;
  }
  
  /* 弹窗样式 */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
  }
  
  .modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }
  
  .modal-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: white;
    border-radius: 40rpx 40rpx 0 0;
    max-height: 85vh;
    overflow-y: auto;
    animation: slideUp 0.3s ease;
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
  
  .modal-header {
    padding: 40rpx 40rpx 20rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .modal-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
  }
  
  .close-icon {
    font-size: 40rpx;
    color: #999;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .close-icon:active {
    opacity: 0.7;
  }
  
  .modal-body {
    padding: 30rpx 40rpx;
  }
  
  .form-item {
    margin-bottom: 30rpx;
  }
  
  .form-label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 15rpx;
  }
  
  .form-input {
    width: 100%;
    height: 80rpx;
    background: #f8f8f8;
    border-radius: 12rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
  }
  
  .picker-input {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .picker-arrow {
    color: #999;
    font-size: 24rpx;
  }
  
  .form-textarea {
    width: 100%;
    height: 200rpx;
    background: #f8f8f8;
    border-radius: 12rpx;
    padding: 20rpx;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
  }
  
  .form-tip {
    display: block;
    text-align: right;
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
  }
  
  .modal-footer {
    padding: 30rpx 40rpx;
    display: flex;
    gap: 20rpx;
    border-top: 1rpx solid #eee;
  }
  
  .modal-btn {
    flex: 1;
    height: 90rpx;
    border-radius: 45rpx;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  
  .modal-btn.cancel {
    background: #f0f0f0;
    color: #666;
  }
  
  .modal-btn.confirm {
    background: linear-gradient(135deg, #FF69B4, #FF1493);
    color: white;
  }
  
  .modal-btn:active {
    opacity: 0.8;
  }
  
  /* 移动端适配 */
  @media (max-width: 768px) {
    .search-add-bar {
      gap: 15rpx;
    }
    
    .search-box.always-show {
      height: 70rpx;
      padding: 0 25rpx;
    }
    
    .add-icon-btn {
      width: 70rpx;
      height: 70rpx;
    }
    
    .icon {
      font-size: 38rpx;
    }
    
    .service-name {
      font-size: 30rpx;
    }
    
    .service-price {
      font-size: 32rpx;
    }
  }
  
  /* 页面加载动画 */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .service-item {
    animation: fadeIn 0.3s ease;
    animation-fill-mode: both;
  }
  
  .service-item:nth-child(1) { animation-delay: 0.1s; }
  .service-item:nth-child(2) { animation-delay: 0.2s; }
  .service-item:nth-child(3) { animation-delay: 0.3s; }
  .service-item:nth-child(4) { animation-delay: 0.4s; }
  .service-item:nth-child(5) { animation-delay: 0.5s; }