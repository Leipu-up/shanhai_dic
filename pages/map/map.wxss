/* pages/map/map.wxss */
.map-page {
    min-height: 100vh;
    background-color: #f5f5f5;
  }
  
  .map-container {
    height: 500rpx;
    background-color: #e0f7fa;
    border-radius: 16rpx;
    margin: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .map-placeholder {
    text-align: center;
  }
  
  .map-icon {
    font-size: 120rpx;
    display: block;
  }
  
  .map-text {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin: 20rpx 0;
  }
  
  .map-hint {
    font-size: 28rpx;
    color: #666;
  }
  
  .map-controls {
    background-color: white;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 30rpx;
  }
  
  .filter-tags {
    display: flex;
    margin-bottom: 30rpx;
    overflow-x: scroll;
  }
  
  .filter-tag {
    padding: 10rpx 30rpx;
    background-color: #f0f0f0;
    border-radius: 50rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #666;
    white-space: nowrap;
  }
  
  .filter-tag.active {
    background-color: #3cc51f;
    color: white;
  }
  
  .control-buttons {
    display: flex;
    justify-content: space-between;
  }
  
  .control-btn {
    flex: 1;
    margin: 0 10rpx;
    background-color: #2c3e50;
    color: white;
    border-radius: 8rpx;
    font-size: 28rpx;
    padding: 20rpx 0;
  }
  
  .map-locations {
    background-color: white;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 40rpx;
  }
  
  .location-item {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .location-item:last-child {
    border-bottom: none;
  }
  
  .location-icon {
    font-size: 60rpx;
    margin-right: 30rpx;
    width: 80rpx;
    text-align: center;
  }
  
  .location-info {
    flex: 1;
  }
  
  .location-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .location-desc {
    font-size: 28rpx;
    color: #666;
    display: block;
  }