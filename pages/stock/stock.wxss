/* 库存管理页面特定样式 */
.stock-stats {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
    font-size: 13px;
  }
  
  .stock-stats .warning {
    color: #ffc107;
  }
  
  .filter-tabs {
    display: flex;
    background: white;
    padding: 0 15px;
    margin-bottom: 15px;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    padding: 12px 0;
    font-size: 14px;
    color: #666;
    position: relative;
  }
  
  .tab-item.active {
    color: #FF6B9D;
    font-weight: 500;
  }
  
  .tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 15%;
    right: 15%;
    height: 2px;
    background: #FF6B9D;
    border-radius: 1px;
  }
  
  .action-buttons {
    display: flex;
    gap: 8px;
    padding: 0 15px;
    margin-bottom: 15px;
  }
  
  .primary-btn.mini,
  .secondary-btn.mini {
    flex: 1;
    padding: 8px 12px;
    font-size: 13px;
  }
  
  .stock-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 10px;
  }
  
  .product-name {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    flex: 1;
  }
  
  .stock-status {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  
  .stock-count {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 4px;
  }
  
  .stock-count.low {
    color: #dc3545;
  }
  
  .stock-count.normal {
    color: #28a745;
  }
  
  .category-tag {
    display: inline-block;
    padding: 2px 8px;
    background: #F0F0F0;
    border-radius: 4px;
    font-size: 11px;
    color: #666;
  }
  
  .stock-details {
    margin: 10px 0;
    padding: 10px 0;
    border-top: 1px solid #F0F0F0;
    border-bottom: 1px solid #F0F0F0;
  }
  
  .expiring {
    color: #dc3545;
    font-weight: 500;
  }
  
  .stock-actions {
    display: flex;
    gap: 8px;
    margin-top: 10px;
  }
  
  .stock-actions .mini-btn.delete {
    background: #F8D7DA;
    color: #721C24;
    border: 1px solid #F5C6CB;
  }

  /* 库存统计 */
.stock-summary {
    background: white;
    padding: 15px;
    margin: 0 15px 15px;
    border-radius: 12px;
    display: flex;
    justify-content: space-between;
  }
  
  .stock-summary-item {
    text-align: center;
    flex: 1;
  }
  
  .stock-summary-number {
    font-size: 24px;
    font-weight: 700;
    color: #FF6B9D;
    display: block;
  }
  
  .stock-summary-label {
    font-size: 12px;
    color: #666;
    display: block;
  }