/* pages/profile/profile.wxss */
.profile-page {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding-bottom: 100rpx;
  }
  
  .user-info {
    background: linear-gradient(135deg, #2c3e50 0%, #4a6491 100%);
    color: white;
    padding: 60rpx 40rpx;
    border-radius: 0 0 40rpx 40rpx;
    display: flex;
    align-items: center;
    position: relative;
  }
  
  .avatar-container {
    margin-right: 30rpx;
  }
  
  .avatar {
    font-size: 120rpx;
    width: 120rpx;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
  }
  
  .avatar-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
  }
  
  .user-detail {
    flex: 1;
  }
  
  .username {
    font-size: 40rpx;
    font-weight: bold;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .user-meta {
    margin-bottom: 10rpx;
  }
  
  .user-level {
    font-size: 28rpx;
    opacity: 0.9;
  }
  
  .login-tip {
    font-size: 26rpx;
    opacity: 0.8;
  }
  
  .login-time {
    font-size: 24rpx;
    opacity: 0.7;
    display: block;
    margin-top: 8rpx;
  }
  
  /* 手机号信息 */
  .phone-info {
    display: flex;
    align-items: center;
    margin-top: 15rpx;
    padding: 8rpx 16rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
    width: fit-content;
  }
  
  .phone-icon {
    font-size: 24rpx;
    margin-right: 8rpx;
  }
  
  .phone-text {
    font-size: 24rpx;
    opacity: 0.9;
  }
  
  .phone-verified {
    color: #07C160;
    margin-left: 8rpx;
    font-size: 24rpx;
    font-weight: bold;
  }
  
  .login-arrow {
    font-size: 40rpx;
    opacity: 0.8;
  }
  
  /* 其他样式保持不变... */
  .stats-section {
    background-color: white;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 40rpx;
    display: flex;
    justify-content: space-around;
  }
  
  .stats-item {
    text-align: center;
  }
  
  .stats-number {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .stats-label {
    font-size: 28rpx;
    color: #666;
  }
  
  .function-list {
    background-color: white;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 0 30rpx;
  }
  
  .func-item {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .func-item:last-child {
    border-bottom: none;
  }
  
  .func-icon {
    font-size: 48rpx;
    margin-right: 30rpx;
    width: 60rpx;
    text-align: center;
  }
  
  .func-name {
    flex: 1;
    font-size: 32rpx;
    color: #333;
  }
  
  .func-arrow {
    font-size: 32rpx;
    color: #999;
  }
  
  .settings-section {
    background-color: white;
    margin: 20rpx;
    border-radius: 16rpx;
    padding: 30rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
  }
  
  .setting-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .setting-item:last-child {
    border-bottom: none;
  }
  
  .setting-name {
    font-size: 32rpx;
    color: #333;
  }
  
  .setting-value {
    font-size: 30rpx;
    color: #999;
  }
  
  .logout-btn {
    margin: 40rpx 20rpx;
    background-color: #ff4444;
    color: white;
    border-radius: 8rpx;
    font-size: 32rpx;
    padding: 20rpx 0;
  }