.modal-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
  }
  
  .modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }
  
  .modal-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: white;
    border-radius: 40rpx 40rpx 0 0;
    max-height: 85vh;
    display: flex;
    flex-direction: column;
    animation: slideUp 0.3s ease;
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 30rpx 20rpx;
    border-bottom: 1rpx solid #F0F0F0;
  }
  
  .modal-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
  }
  
  .close-btn {
    font-size: 50rpx;
    color: #999;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .modal-body {
    flex: 1;
    padding: 20rpx 30rpx;
    height: 400rpx;
  }
  
  .form-section {
    margin-bottom: 40rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 30rpx;
    padding-left: 20rpx;
    position: relative;
  }
  
  .section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10rpx;
    width: 6rpx;
    height: 30rpx;
    background: #FF69B4;
    border-radius: 3rpx;
  }
  
  .form-item {
    margin-bottom: 30rpx;
  }
  
  .form-label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 15rpx;
  }
  
  .form-label.required::after {
    content: '*';
    color: #FF4444;
    margin-left: 5rpx;
  }
  
  .form-input {
    background: #F8F8F8;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    border: 1rpx solid #E0E0E0;
  }
  
  .form-input:focus {
    border-color: #FF69B4;
  }
  
  .picker-input {
    background: #F8F8F8;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    border: 1rpx solid #E0E0E0;
    display: flex;
    align-items: center;
  }
  
  .picker-text {
    flex: 1;
  }
  
  .picker-text.placeholder {
    color: #999;
  }
  
  /* 状态选项 */
  .status-options {
    display: flex;
    gap: 30rpx;
  }
  
  .status-option {
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    background: #F8F8F8;
    border-radius: 12rpx;
    border: 1rpx solid #E0E0E0;
    flex: 1;
    transition: all 0.3s;
  }
  
  .status-option.active {
    background: #FFF0F5;
    border-color: #FF69B4;
  }
  
  .status-option.active .status-dot {
    background: #FF69B4;
  }
  
  .status-dot {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: #E0E0E0;
    margin-right: 15rpx;
    transition: all 0.3s;
  }
  
  .status-text {
    font-size: 28rpx;
    color: #333;
  }
  
  /* 文本域 */
  .form-textarea {
    background: #F8F8F8;
    border-radius: 12rpx;
    padding: 25rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    border: 1rpx solid #E0E0E0;
    height: 200rpx;
    width: 100%;
    box-sizing: border-box;
  }
  
  .textarea-counter {
    text-align: right;
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
  }
  
  .modal-footer {
    display: flex;
    padding: 30rpx;
    border-top: 1rpx solid #F0F0F0;
    gap: 20rpx;
  }
  
  .btn-cancel {
    flex: 1;
    background: #F5F5F5 !important;
    color: #666 !important;
    border-radius: 50rpx !important;
    font-size: 32rpx !important;
    height: 80rpx !important;
    border: none !important;
  }
  
  .btn-confirm {
    flex: 1;
    background: linear-gradient(135deg, #FF69B4, #FF1493) !important;
    color: white !important;
    border-radius: 50rpx !important;
    font-size: 32rpx !important;
    height: 80rpx !important;
    border: none !important;
  }
  
  .btn-confirm[disabled] {
    opacity: 0.5 !important;
  }