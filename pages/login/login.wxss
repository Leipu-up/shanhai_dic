/* pages/login/login.wxss */
.login-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #2c3e50 0%, #4a6491 100%);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 40rpx;
  }
  
  /* 装饰圆圈 */
  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10rpx);
  }
  
  .circle-1 {
    width: 400rpx;
    height: 400rpx;
    top: -200rpx;
    right: -200rpx;
  }
  
  .circle-2 {
    width: 300rpx;
    height: 300rpx;
    bottom: -150rpx;
    left: -150rpx;
  }
  
  /* 登录容器 */
  .login-container {
    width: 100%;
    max-width: 600rpx;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20rpx);
    border-radius: 32rpx;
    padding: 60rpx 50rpx;
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
    position: relative;
    z-index: 1;
  }
  
  /* 头部 */
  .login-header {
    text-align: center;
    margin-bottom: 50rpx;
  }
  
  .logo-container {
    margin-bottom: 20rpx;
  }
  
  .logo-icon {
    font-size: 80rpx;
    display: block;
  }
  
  .login-title {
    display: block;
    font-size: 56rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 10rpx;
  }
  
  .login-subtitle {
    display: block;
    font-size: 28rpx;
    color: #666;
  }
  
  /* 微信登录说明 */
  .wechat-login-tip {
    text-align: center;
    margin-bottom: 60rpx;
    padding: 30rpx;
    background: linear-gradient(135deg, rgba(7, 193, 96, 0.1) 0%, rgba(7, 193, 96, 0.05) 100%);
    border-radius: 20rpx;
  }
  
  .tip-title {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    color: #07C160;
    margin-bottom: 20rpx;
  }
  
  .tip-desc {
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .feature-list {
    text-align: left;
    display: inline-block;
  }
  
  .feature-item {
    display: block;
    font-size: 26rpx;
    color: #666;
    margin-bottom: 12rpx;
    line-height: 1.4;
  }
  
  /* 微信登录按钮 */
  .wechat-login-btn {
    width: 100%;
    height: 100rpx;
    background: #07C160;
    color: white;
    border: none;
    border-radius: 50rpx;
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    box-shadow: 0 10rpx 30rpx rgba(7, 193, 96, 0.3);
  }
  
  .wechat-login-btn::after {
    border: none;
  }
  
  .wechat-login-btn:active {
    background: #06ad56;
    transform: scale(0.98);
    box-shadow: 0 5rpx 20rpx rgba(7, 193, 96, 0.4);
  }
  
  .wechat-icon {
    font-size: 40rpx;
    margin-right: 15rpx;
  }
  
  /* 登录协议 */
  .agreement {
    display: flex;
    align-items: flex-start;
    margin-bottom: 40rpx;
  }
  
  .agreement-text {
    font-size: 24rpx;
    color: #666;
    line-height: 1.4;
    margin-left: 12rpx;
    flex: 1;
  }
  
  .agreement-link {
    color: #07C160;
  }
  
  /* 游客登录 */
  .guest-login {
    text-align: center;
    padding-top: 30rpx;
    border-top: 2rpx solid #f0f0f0;
  }
  
  .guest-text {
    font-size: 28rpx;
    color: #666;
    transition: all 0.3s;
  }
  
  .guest-text:active {
    color: #07C160;
  }
  
  /* 登录进度 */
  .login-progress {
    margin-top: 40rpx;
    padding-top: 30rpx;
    border-top: 2rpx solid #f0f0f0;
  }
  
  .progress-steps {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
  }
  
  .step-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .step-dot {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background: #e9ecef;
    color: #666;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    transition: all 0.3s;
  }
  
  .step-item.active .step-dot {
    background: #07C160;
    color: white;
  }
  
  .step-text {
    font-size: 22rpx;
    color: #666;
    text-align: center;
  }
  
  .step-item.active .step-text {
    color: #07C160;
    font-weight: 500;
  }
  
  .step-line {
    flex: 1;
    height: 4rpx;
    background: #e9ecef;
    margin: 0 10rpx;
    position: relative;
    top: -25rpx;
  }
  
  .step-item.active ~ .step-line {
    background: #07C160;
  }
  
  .progress-text {
    text-align: center;
    font-size: 26rpx;
    color: #07C160;
    font-weight: 500;
    padding: 10rpx;
    background: rgba(7, 193, 96, 0.1);
    border-radius: 10rpx;
  }
  
  /* 底部装饰 */
  .decoration-myth {
    position: absolute;
    bottom: 60rpx;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    gap: 40rpx;
    opacity: 0.6;
    z-index: 0;
  }
  
  .myth-icon {
    font-size: 48rpx;
    animation: float 3s ease-in-out infinite;
  }
  
  .myth-icon:nth-child(1) {
    animation-delay: 0s;
  }
  
  .myth-icon:nth-child(2) {
    animation-delay: 0.5s;
  }
  
  .myth-icon:nth-child(3) {
    animation-delay: 1s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20rpx);
    }
  }